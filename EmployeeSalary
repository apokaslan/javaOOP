        Employee e1 = new Employee("Can demircan",1200,40,2000);
        Employee  e2= new Employee("Kerem",5000,35,2010);
        Employee e3= new Employee("Ayse",10000,55,2019);
        Employee e4 = new Employee("Berk",950,45,2020);

        e1.toString();
